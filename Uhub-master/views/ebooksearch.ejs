<!DOCTYPE html>
<html>
  <% include ../include/head %>

  <% include ../include/styleofauto %>
  
  <body>
    <% include ../include/nev %>               
              
    <div class="slide-one-item home-slider owl-carousel">
      <div class="site-blocks-cover" style="background-image: url(images/hero_b1_1.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
        <div class="container">
          <div class="row align-items-center justify-content-center">
            <div class="col-md-7 text-center" data-aos="fade">
              <h1><strong>Search n</strong> learn</h1> 
              
              
              <form autocomplete="off" action="/ebooksearch" method="post">
                <div class="autocomplete" style="width:300px;"> 
                 <input id="myInput" style="text-align: center;" type="text" name="fltrsub" placeholder="Enter Subject Name" >
                </div>
                 <input type="submit" name="submit" >
              </form>
              <br>
              <br>
              <br>
              <thead>
                <table style="color: white; font: weight 100; " class="table">
                  <thead>
                  <tr>
                    <th >Subject</th>
                    <th >Books Name</th>
                    <th >Download File</th>
                  </tr>
                </thead>
                <tbody style="font-weight: 600;">
                  <%if (records.length >0){ %>
                    <% records.forEach(function(row){ %>
                    <tr>
                      <td  ><%= row.subject %></td>
                      <td   ><%= row.bookname %></td>
                      <td style="color:white">
                        <a href="./ebooks/<%= row.ebookname %>"  download>
                      <img src="./ebooks/<%= row.ebookname %>"  alt="File" width="80">
                    </a>
                    </td>   
                    </tr>
                    <% })}else{ %>
                      <tr>
                          <td colspan="6">No Record Found</td>
                        </tr>
                      <% } %>
                    </tbody>
                </table>

              </div>
            </div>
          </div>
        </div>
    </div> 
     
                    

                  
                   
                    
                    
                    
                    
                    
                    

  

    <% include ../include/footer %>
  
    <% include ../include/script %>

   
  </body>
</html>